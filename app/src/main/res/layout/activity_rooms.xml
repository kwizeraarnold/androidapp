<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hostel"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floor_name"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/lock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_outline_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/hostel"
        app:layout_constraintTop_toTopOf="@+id/hostel" />

    <ImageView
        android:id="@+id/lock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_open_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock1"
        app:layout_constraintTop_toTopOf="@+id/lock1" />

    <ImageView
        android:id="@+id/lock3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_open_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock2"
        app:layout_constraintTop_toTopOf="@+id/lock2" />

    <ImageView
        android:id="@+id/lock4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_outline_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock3"
        app:layout_constraintTop_toTopOf="@+id/lock3" />

    <ImageView
        android:id="@+id/lock5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_open_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock4"
        app:layout_constraintTop_toTopOf="@+id/lock4" />

    <ImageView
        android:id="@+id/lock6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_open_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/lovk7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock5"
        app:layout_constraintTop_toTopOf="@+id/lock5" />

    <ImageView
        android:id="@+id/lovk7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lock_open_black_24dp"
        app:layout_constraintEnd_toEndOf="@+id/hostel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock6"
        app:layout_constraintTop_toTopOf="@+id/lock6" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostel"
        app:srcCompat="@drawable/rectangle3" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_star_border_black_24dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/imageView15" />

    <ImageView
        android:id="@+id/rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        app:layout_constraintEnd_toStartOf="@+id/rating2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/value"
        app:layout_constraintTop_toTopOf="@+id/value"
        android:src="@drawable/ic_star_border_black_24dp" />

    <ImageView
        android:id="@+id/rating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rating1"
        app:layout_constraintEnd_toStartOf="@+id/rating3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating1"
        app:layout_constraintTop_toTopOf="@+id/rating1"
        android:src="@drawable/ic_star_border_black_24dp" />

    <ImageView
        android:id="@+id/rating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rating2"
        app:layout_constraintEnd_toStartOf="@+id/rating4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating2"
        app:layout_constraintTop_toTopOf="@+id/rating2"
        android:src="@drawable/ic_star_border_black_24dp" />

    <ImageView
        android:id="@+id/rating4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rating3"
        app:layout_constraintEnd_toStartOf="@+id/rating5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating3"
        app:layout_constraintTop_toTopOf="@+id/rating3"
        app:layout_constraintVertical_bias="1.0"
        android:src="@drawable/ic_star_border_black_24dp" />

    <ImageView
        android:id="@+id/rating5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rating4"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating4"
        app:layout_constraintTop_toTopOf="@+id/rating4"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/ic_star_border_black_24dp" />

    <TextView
        android:id="@+id/room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A01"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock1"
        app:layout_constraintStart_toStartOf="@+id/lock1"
        app:layout_constraintTop_toBottomOf="@+id/lock1" />

    <TextView
        android:id="@+id/floor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ground Floor"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A02"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock2"
        app:layout_constraintStart_toStartOf="@+id/lock2"
        app:layout_constraintTop_toBottomOf="@+id/lock2" />

    <TextView
        android:id="@+id/room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A03"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock3"
        app:layout_constraintStart_toStartOf="@+id/lock3"
        app:layout_constraintTop_toBottomOf="@+id/lock3" />

    <TextView
        android:id="@+id/room4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A04"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock4"
        app:layout_constraintStart_toStartOf="@+id/lock4"
        app:layout_constraintTop_toBottomOf="@+id/lock4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A05"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock5"
        app:layout_constraintStart_toStartOf="@+id/lock5"
        app:layout_constraintTop_toBottomOf="@+id/lock5" />

    <TextView
        android:id="@+id/room6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A06"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lock6"
        app:layout_constraintStart_toStartOf="@+id/lock6"
        app:layout_constraintTop_toBottomOf="@+id/lock6" />

    <TextView
        android:id="@+id/room7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A07"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/lovk7"
        app:layout_constraintStart_toStartOf="@+id/lovk7"
        app:layout_constraintTop_toBottomOf="@+id/lovk7" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RATE US"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/imageView14" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cleanliness"
        android:textAlignment="viewStart"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toStartOf="@+id/rating1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

</android.support.constraint.ConstraintLayout>